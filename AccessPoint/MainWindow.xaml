<Window x:Name="authorizationWindow" x:Class="AccessPoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessPoint"
        mc:Ignorable="d"
        Title="MainWindow" Height="444" Width="380" MaxHeight="444" MaxWidth="380" MinWidth="380" MinHeight="444">
    <Grid>
        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="145,240,120,0" VerticalAlignment="Top" Width="75" Click="buttonConnect_Click"/>
        <Label x:Name="information" Content="" HorizontalAlignment="Left" Padding="20,0,10,0" Margin="0,384,0,0" VerticalAlignment="Top" Height="30" FontSize="18"/>
        <PasswordBox x:Name="passwordText" HorizontalAlignment="Left" Margin="120,200,100,0" VerticalAlignment="Top" Width="130" Height="25" MouseEnter="PasswordBox_MouseEnter" MouseLeave="passwordText_MouseLeave_1" KeyDown="passwordText_KeyDown"/>

    </Grid>
</Window>
